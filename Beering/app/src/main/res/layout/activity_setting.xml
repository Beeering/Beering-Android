<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="io.beering.beering.SettingActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_toolbar"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/push_alarm_text"
        android:text="푸시 알림"
        android:textSize="15.8sp"
        android:textColor="#525252"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="26.5dp"
    />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:layout_marginTop="12dp"
        android:track="@drawable/switch_track_selector"
        android:thumb="@drawable/swtich_thumb_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizon_line_1"
        android:background="#cfcfcf"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_below="@+id/push_alarm_text">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tns_text"
        android:text="이용약관"
        android:textSize="15.8sp"
        android:textColor="#525252"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="26.5dp"
        android:layout_below="@+id/horizon_line_1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizon_line_2"
        android:background="#cfcfcf"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_below="@+id/tns_text">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout_txt"
        android:text="로그아웃"
        android:textSize="15.8sp"
        android:textColor="#525252"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="26.5dp"
        android:layout_below="@+id/horizon_line_2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_below="@+id/logout_txt">
    </View>

</RelativeLayout>

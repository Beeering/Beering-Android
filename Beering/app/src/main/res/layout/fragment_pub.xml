<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.beering.beering.Fragement.PubFragment"
    android:background="#eff2f4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pub"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#3e3936"
        android:layout_marginLeft="17.4dp"
        android:layout_marginTop="14.2dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pub_filter_btn"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:layout_marginRight="9.2dp"
        android:text="필터"
        android:textColor="#43484d"
        android:drawableRight="@drawable/orange"
        android:textSize="15.2sp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_pub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="57dp"
        app:layoutManager="GridLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:spanCount="2" />


</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eff2f4"
    tools:context="io.beering.beering.Fragement.BeerFragment">

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:buttonTint="#ff7415"
        android:textColor="#34373c"
        android:textSize="15.2sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="11.5dp"
        android:text="수제맥주만 보기" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:layout_marginRight="9.2dp"
        android:text="정렬"
        android:textColor="#43484d"
        android:drawableRight="@drawable/filter_orange"
        android:textSize="15.2sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_beer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="57dp"
        app:layoutManager="GridLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:spanCount="2" />


</FrameLayout>

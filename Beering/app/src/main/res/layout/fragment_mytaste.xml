<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taste_text_1"
        android:text="맥주 특징"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="17.8dp"
        android:layout_marginLeft="18.5dp"
        android:textColor="#747474" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taste_text_1"
        android:id="@+id/taste_text_2"
        android:text="(IBU : 쓴 맛의 정도 / ABU : 알코올 도수 / Kcal : 칼로리)"
        android:textSize="10.5sp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="18.5dp"
        android:textColor="#5e6977" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taste_text_2"
        android:layout_marginTop="26.8dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="60.8dp"
                android:layout_height="60.8dp"
                android:background="#6da624"
                android:text="IBU"
                android:gravity="center"
                android:paddingTop="35.5dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="높은 편"/>

            <TextView
                android:layout_width="60.8dp"
                android:layout_height="60.8dp"
                android:background="#6da624"
                android:text="IBU"
                android:gravity="center"
                android:paddingTop="35.5dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="높은 편"/>

            <TextView
                android:layout_width="60.8dp"
                android:layout_height="60.8dp"
                android:background="#6da624"
                android:text="IBU"
                android:gravity="center"
                android:paddingTop="35.5dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="높은 편"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
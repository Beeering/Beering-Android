<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEAEA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taste_text_1"
        android:text="맥주 특징"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="17.8dp"
        android:layout_marginLeft="18.5dp"
        android:textColor="#747474" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taste_text_1"
        android:text="(IBU : 쓴 맛의 정도 / ABU : 알코올 도수 / Kcal : 칼로리)"
        android:textSize="10.5sp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="18.5dp"
        android:textColor="#5e6977" />


</RelativeLayout>
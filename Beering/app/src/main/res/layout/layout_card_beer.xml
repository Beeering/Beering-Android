<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="166dp"
    android:layout_height="316.2dp"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/item_image_beer"
            android:layout_width="166dp"
            android:layout_height="249dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/item_image_beer"
            android:textSize="16.2sp"
            android:textColor="#2d2724"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:textSize="10sp"
            android:textColor="#ff7415"
            android:layout_marginLeft="11dp"
            />

        <TextView
            android:id="@+id/item_nation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_style"
            android:textSize="10sp"
            android:textColor="#747474"
            android:layout_marginLeft="11dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>